<%= render "shared/errors", object: post %>

<%= form_with model: [:blog, post] do |f| %>
  <%= f.label :title, "Titel" %>
  <%= f.text_field :title %>

  <%= f.label :slug, "Slug" %>
  <%= f.text_field :slug %>

  <%= f.label :content, "Inhalt" %>
  <%= f.rich_text_area :content %>

  <%= f.submit submit_label %>
<% end %>
